#:kivy 1.8.0
#:import starbasestab nesi.starbasestab
<StarbasesTab>
	# job_grid: _starbase_grid
	font_size: 12
    text: 'Starbases'
    StackLayout:
    	orientation: 'rl-tb'
    	Button:
    	    font_size: 12
			size_hint: None, None
    		height: 32
    		width: 100
    		text: 'Refresh'
    		on_press: root.fetch_starbases()
    	GridLayout:
    		cols: 6
			size_hint_y: None
			height: 20
    		Label:
    			font_size: 12
    			text: 'System'
    		Label:
    			font_size: 12
    			text: 'Moon'
    		Label:
    			font_size: 12
    			text: 'Type'
    		Label:
    			font_size: 12
    			text: 'State'
    		Label:
    			font_size: 12
    			text: 'State From'
    		Label:
    			font_size: 12
    			text: 'Online Since / At'
    	ScrollView:
    		id: starbasesScroll
    		do_scroll_y: True
    		do_scroll_x: False
    		
    		# StarbaseGrid:
    		# 	id: _starbase_grid
