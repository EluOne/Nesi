#:kivy 1.8.0
#:import starbasestab nesi.starbasestab
<StarbasesTab>
	# job_grid: _starbase_grid
	font_size: '12sp'
    text: 'Starbases'
    BoxLayout:
    	orientation: 'vertical'
    	Button:
    	    font_size: '12sp'
			size_hint: None, None
    		height: '32dp'
    		width: '100dp'
    		text: 'Refresh'
    		on_press: root.fetch_starbases()
    	GridLayout:
    		cols: 6
			size_hint_y: None
			height: '20dp'
    		Label:
    			font_size: '12sp'
    			text: 'System'
    		Label:
    			font_size: '12sp'
    			text: 'Moon'
    		Label:
    			font_size: '12sp'
    			text: 'Type'
    		Label:
    			font_size: '12sp'
    			text: 'State'
    		Label:
    			font_size: '12sp'
    			text: 'State From'
    		Label:
    			font_size: '12sp'
    			text: 'Online Since / At'
    	ScrollView:
    		id: starbasesScroll
    		# StarbaseGrid:
    		# 	id: _starbase_grid
