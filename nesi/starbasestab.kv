#:kivy 1.8.0
#:import starbasestab nesi.starbasestab
<StarbasesTab>
	# job_grid: _starbase_grid
	font_size: 12
    text: 'Starbases'
    StackLayout:
    	orientation: 'rl-tb'
    	Button:
    	    font_size: 12
			size_hint: None, None
    		height: 32
    		width: 100
    		text: 'Refresh'
    		on_press: root.fetch_starbases()
    	GridLayout:
    		cols: 7
			size_hint_y: None
			height: 20
    		Label:
    			font_size: 12
    			text: 'State'
    		Label:
    			font_size: 12
    			text: 'Activity'
    		Label:
    			font_size: 12
    			text: 'Type'
    		Label:
    			font_size: 12
    			text: 'Location'
    		Label:
    			font_size: 12
    			text: 'Installer'
    		Label:
    			font_size: 12
    			text: 'Install Date'
    		Label:
    			font_size: 12
    			text: 'End Date'
    	ScrollView:
    		id: starbasesScroll
    		do_scroll_y: True
    		do_scroll_x: False
    		
