#:kivy 1.8.0
#:import pilots nesi.pilots
<Pilots>:
	name: 'pilots_screen'
	keyID: _keyID
	vCode: _vCode
	GridLayout:
		cols: 1
		GridLayout:
			cols: 2
			size_hint: None, None
			height: 100
			GridLayout:
				cols: 2
				Label:
					text: 'Key ID:'
				TextInput:
					id: _keyID
					text: ''
					multiline: False
				Label:
					text: 'vCode:'
				TextInput:
					id: _vCode
					text: ''
					multiline: False
			Button:
				text: "Add"
				size_hint: None, None
				size: 100, 32
				on_press: root.onAdd()
		ScrollView:
			GridLayout:
				cols: 5
				spacing: 20
				size_hint_y: None
				Label:
					text: 'Character Name'
				Label:
					text: 'Corporation'
				Label:
					text: 'API Key'
				Label:
					text: 'Key Type'
				Label:
					text: 'Expires'
		GridLayout:
			cols: 4
			size_hint: None, None
			height: 32
			Button:
				text: "Cancel"
				size_hint: None, None
				size: 100, 32
				on_press: root.manager.current = 'nesi_screen'
			Button:
				text: "Delete"
				size_hint: None, None
				size: 100, 32
				on_press: root.onDelete()
			Button:
				text: "Refresh"
				size_hint: None, None
				size: 100, 32
				on_press: root.onRefresh()
			Button:
				text: "Save"
				size_hint: None, None
				size: 100, 32
				on_press: root.onSave()
				