#:kivy 1.8.0
<Nesi@Screen>:
	name: 'nesi_screen'
	GridLayout:
		cols: 1	
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 64
			Image:
				size_hint_x: None
				width: 64
				source: 'images/nesi.png'
		    Label:
		    	font_size: 20
		        text: 'Nova Echo Science & Industry'
		    Button:
	    	    font_size: 12
				size_hint: None, None
	    		height: 32
	    		width: 64
	    		text: 'Config'
	    		on_press: root.manager.current = 'config_screen'
	
	    TabbedPanel:
	        do_default_tab: False
	        
			JobsTab:
				id: _jobs_tab
				status_bar: _status_bar

			StarbasesTab:
				id: _starbases_tab
				status_bar: _status_bar
	        
	        TabbedPanelItem:
	        	font_size: 12
	            text: 'Manufacturing'
	            BoxLayout:
	
		StatusBar:
			id: _status_bar
			size_hint_y: None
