#:kivy 1.8.0
<RootWidget>:
	cols: 1
	status_bar: _status_bar

	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height: 64
		Image:
			size_hint_x: None
			width: 64
			source: 'images/nesi.png'
	    Label:
	    	font_size: 20
	        text: 'Nova Echo Science & Industry'

    TabbedPanel:
        do_default_tab: False
        
        TabbedPanelItem:
        	font_size: 12
            text: 'Jobs'
            StackLayout:
            	orientation: 'rl-tb'
            	Button:
            	    font_size: 12
					size_hint: None, None
            		height: 32
            		width: 100
            		text: 'Get Jobs'
            		on_press: root.fetch_jobs()
            	ScrollView:
            		id: jobScroll
  
        TabbedPanelItem:
        	font_size: 12
            text: 'Starbases'
            GridLayout:
            	cols: 1
            	Button:
            	    font_size: 12
					size_hint_y: None
					size_hint_x: None
            		height: 32
            		width: 100
            		text: 'Refresh'
        
        TabbedPanelItem:
        	font_size: 12
            text: 'Manufacturing'
            BoxLayout:

	StatusBar:
		id: _status_bar
		size_hint_y: None
