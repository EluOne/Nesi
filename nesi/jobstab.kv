#:kivy 1.8.0
#:import jobstab nesi.jobstab
<JobsTab>
	job_grid: _job_grid
	font_size: '12sp'
    text: 'Jobs'
    StackLayout:
    	orientation: 'rl-tb'
    	Button:
    	    font_size: '12sp'
			size_hint: None, None
    		height: 32
    		width: 100
    		text: 'Get Jobs'
    		on_press: root.fetch_jobs()
    	GridLayout:
    		cols: 7
			size_hint_y: None
			height: 20
    		Label:
    			font_size: '12sp'
    			text: 'State'
    		Label:
    			font_size: '12sp'
    			text: 'Activity'
    		Label:
    			font_size: '12sp'
    			text: 'Type'
    		Label:
    			font_size: '12sp'
    			text: 'Location'
    		Label:
    			font_size: '12sp'
    			text: 'Installer'
    		Label:
    			font_size: '12sp'
    			text: 'Install Date'
    		Label:
    			font_size: '12sp'
    			text: 'End Date'
    	ScrollView:
    		id: jobsScroll
    		# size_hint: None, None
			size_hint_y: None
    		do_scroll_y: True
    		do_scroll_x: False

    		JobGrid:
    			id: _job_grid
