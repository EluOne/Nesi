#:kivy 1.8.0
#:import jobstab nesi.jobstab
<JobsTab>
	job_grid: _job_grid
	font_size: '12sp'
    text: 'Jobs'
    BoxLayout:
    	orientation: 'vertical'
    	Button:
    	    font_size: '12sp'
			size_hint: None, None
    		height: '32dp'
    		width: '100dp'
    		text: 'Get Jobs'
    		on_press: root.fetch_jobs()
    	GridLayout:
    		cols: 7
			size_hint_y: None
			height: '20dp'
    		Label:
    			font_size: '12sp'
    			text: 'Status'
    		Label:
    			font_size: '12sp'
    			text: 'Activity'
    		Label:
    			font_size: '12sp'
    			text: 'Type'
    		Label:
    			font_size: '12sp'
    			text: 'Location'
    		Label:
    			font_size: '12sp'
    			text: 'Installer'
    		Label:
    			font_size: '12sp'
    			text: 'Install Date'
    		Label:
    			font_size: '12sp'
    			text: 'End Date'
    	ScrollView:
    		id: jobsScroll
    		JobGrid:
    			id: _job_grid
